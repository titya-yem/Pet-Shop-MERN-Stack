{
  "compilerOptions": {
    "target": "ES2019",
    "module": "CommonJS",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "outDir": "./dist",
    "rootDir": "./backend",
    "baseUrl": "./",
    "typeRoots": ["./node_modules/@types", "./types"],
    "paths": {
      "@/*": ["backend/*"]
    }
  },
  "include": ["backend/**/*.ts"],
  "exclude": ["node_modules", "dist"]
}